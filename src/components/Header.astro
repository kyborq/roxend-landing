---
const navItems = [
  { label: "Услуги", href: "#services" },
  { label: "Продукты", href: "#products" },
  { label: "Кейсы", href: "/blog" },
  { label: "FAQ", href: "#faq" },
  { label: "Контакты", href: "#contacts" },
];
---

<header class="header">
  <div class="container">
    <div class="logo">
      <a href="/" aria-label="Roxend - Главная страница">
        <svg
          class="logo-icon"
          width="32"
          height="32"
          viewBox="0 0 48 48"
          fill="none"
          xmlns="http://www.w3.org/2000/svg"
        >
          <path
            d="M23.5684 0C24.1343 0.0629928 43.9411 11.7836 45.71 12.8193L45.7168 25.5195C41.8829 27.7442 38.0722 30.009 34.2852 32.3125C38.0078 34.4065 41.9387 36.8327 45.6387 39.0098C45.6029 40.5963 45.6342 42.2577 45.6426 43.8506L39.0332 47.6074L12.4004 31.4541L12.3945 47.9395C9.00482 45.797 5.42753 43.7953 2 41.6504V12.4219L23.5684 0ZM23.7559 12.9141C20.0503 15.1152 16.0915 17.3816 12.4512 19.6494L23.3711 26.1836L34.4561 19.4688C33.1103 18.6111 24.7626 13.1707 23.7559 12.9141Z"
            fill="currentColor"></path>
        </svg>
        <span class="logo-text">Roxend</span>
      </a>
    </div>

    <button
      class="mobile-menu-button"
      aria-label="Открыть меню"
      aria-expanded="false"
    >
      <span class="hamburger"></span>
      <span class="hamburger"></span>
      <span class="hamburger"></span>
    </button>

    <nav class="nav" aria-label="Основная навигация">
      <ul class="nav-list">
        {
          navItems.map((item) => (
            <li>
              <a
                href={item.href}
                class="nav-link"
                aria-label={`Перейти к ${item.label.toLowerCase()}`}
              >
                {item.label}
              </a>
            </li>
          ))
        }
      </ul>
    </nav>
  </div>

  <div class="mobile-overlay"></div>
</header>

<script>
  const mobileMenuButton = document.querySelector(".mobile-menu-button");
  const nav = document.querySelector(".nav");
  const mobileOverlay = document.querySelector(".mobile-overlay");
  const navLinks = document.querySelectorAll(".nav-link");

  const toggleMenu = () => {
    const isOpen = nav?.classList.contains("nav-open");

    if (isOpen) {
      nav?.classList.remove("nav-open");
      mobileOverlay?.classList.remove("overlay-visible");
      mobileMenuButton?.classList.remove("menu-open");
      mobileMenuButton?.setAttribute("aria-expanded", "false");
      mobileMenuButton?.setAttribute("aria-label", "Открыть меню");
      document.body.style.overflow = "";
    } else {
      nav?.classList.add("nav-open");
      mobileOverlay?.classList.add("overlay-visible");
      mobileMenuButton?.classList.add("menu-open");
      mobileMenuButton?.setAttribute("aria-expanded", "true");
      mobileMenuButton?.setAttribute("aria-label", "Закрыть меню");
      document.body.style.overflow = "hidden";
    }
  };

  mobileMenuButton?.addEventListener("click", toggleMenu);
  mobileOverlay?.addEventListener("click", toggleMenu);

  navLinks.forEach((link) => {
    link.addEventListener("click", () => {
      if (nav?.classList.contains("nav-open")) {
        toggleMenu();
      }
    });
  });
</script>

<style>
  .header {
    display: flex;
    justify-content: center;
    align-items: center;
    padding: 0 16px;
  }

  .container {
    display: flex;
    align-items: center;
    justify-content: space-between;
    max-width: 848px;
    width: 100%;
    height: 64px;
  }

  .logo a {
    text-decoration: none;
    display: flex;
    align-items: center;
    gap: 10px;
  }

  .logo-icon {
    width: 32px;
    height: 32px;
    color: #0a45c3;
    flex-shrink: 0;
  }

  .logo-text {
    font-size: 20px;
    font-weight: 700;
    color: #000000;
    transition: opacity 0.3s ease;
  }

  /* Mobile Menu Button */
  .mobile-menu-button {
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    gap: 5px;
    width: 40px;
    height: 40px;
    background: none;
    border: none;
    cursor: pointer;
    padding: 0;
    z-index: 102;
    transition: all 0.3s ease;
  }

  .hamburger {
    width: 24px;
    height: 2px;
    background-color: #000000;
    transition: all 0.3s ease;
    border-radius: 2px;
  }

  .mobile-menu-button.menu-open .hamburger:nth-child(1) {
    transform: translateY(7px) rotate(45deg);
  }

  .mobile-menu-button.menu-open .hamburger:nth-child(2) {
    opacity: 0;
  }

  .mobile-menu-button.menu-open .hamburger:nth-child(3) {
    transform: translateY(-7px) rotate(-45deg);
  }

  /* Mobile Overlay */
  .mobile-overlay {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-color: rgba(0, 0, 0, 0.5);
    opacity: 0;
    visibility: hidden;
    transition: all 0.3s ease;
    z-index: 98;
  }

  .mobile-overlay.overlay-visible {
    opacity: 1;
    visibility: visible;
  }

  /* Navigation */
  .nav {
    position: fixed;
    top: 0;
    right: -100%;
    width: 280px;
    height: 100vh;
    background-color: #ffffff;
    box-shadow: -4px 0 20px rgba(0, 0, 0, 0.1);
    transition: right 0.3s ease;
    z-index: 101;
    overflow-y: auto;
  }

  .nav.nav-open {
    right: 0;
  }

  .nav-list {
    display: flex;
    flex-direction: column;
    list-style: none;
    margin: 0;
    padding: 80px 24px 24px 24px;
    gap: 0;
  }

  .nav-link {
    display: block;
    padding: 16px 0;
    text-decoration: none;
    color: #333333;
    font-weight: 500;
    font-size: 18px;
    transition: all 0.3s ease;
    border-bottom: 1px solid rgba(0, 0, 0, 0.06);
  }

  .nav-link:hover {
    color: #000000;
    padding-left: 8px;
  }

  /* Tablet and Desktop */
  @media (min-width: 640px) {
    .header {
      height: 80px;
    }

    .container {
      height: 80px;
    }

    .logo-icon {
      width: 36px;
      height: 36px;
    }

    .logo-text {
      font-size: 24px;
    }

    .mobile-menu-button {
      display: none;
    }

    .mobile-overlay {
      display: none;
    }

    .nav {
      position: static;
      width: auto;
      height: auto;
      background-color: transparent;
      box-shadow: none;
      overflow-y: visible;
    }

    .nav-list {
      flex-direction: row;
      padding: 0;
      gap: 24px;
    }

    .nav-link {
      padding: 0;
      font-size: 16px;
      border-bottom: none;
    }

    .nav-link:hover {
      padding-left: 0;
    }
  }

  @media (min-width: 1024px) {
    .header {
      height: 96px;
    }

    .container {
      height: 96px;
    }

    .logo-icon {
      width: 40px;
      height: 40px;
    }
  }
</style>
