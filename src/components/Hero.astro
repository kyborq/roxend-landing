---
interface Props {
  title?: string;
  titleHtml?: string;
  description?: string;
  buttonText?: string;
  buttonHref?: string;
  secondaryButtonText?: string;
  secondaryButtonHref?: string;
}

const {
  title,
  titleHtml,
  description = "Разрабатываю веб и мобильные приложения под ключ. Полный цикл от идеи до запуска. Прямое общение, прозрачные сроки, код остаётся у вас.",
  buttonText = "Получить консультацию",
  buttonHref = "#contacts",
  secondaryButtonText = "Наши продукты",
  secondaryButtonHref = "#products",
} = Astro.props;
---

<section class="hero">
  <div class="hero-content">
    {
      titleHtml ? (
        <h1 class="hero-title" set:html={titleHtml} />
      ) : (
        <h1 class="hero-title">
          {title ||
            "Разрабатываем веб и мобильные приложения, которые масштабируют ваш бизнес"}
        </h1>
      )
    }
    <p class="hero-description">{description}</p>
    <div class="hero-actions">
      <a href={buttonHref} class="hero-button hero-button-primary">
        {buttonText}
      </a>
      <a href={secondaryButtonHref} class="hero-button hero-button-secondary">
        {secondaryButtonText}
      </a>
    </div>
  </div>
</section>

<style>
  .hero {
    max-width: 896px;
    margin: 0 auto;
    padding: 40px 16px;
  }

  .hero-content {
    text-align: center;
    display: flex;
    flex-direction: column;
    gap: 20px;
  }

  .hero-title {
    font-size: 32px;
    font-weight: 700;
    line-height: 1.2;
    color: #000000;
    margin: 0;
    text-wrap: balance;
  }

  .hero-description {
    font-size: 15px;
    line-height: 1.6;
    color: #666666;
    max-width: 672px;
    margin: 0 auto;
    text-wrap: pretty;
  }

  .hero-actions {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    gap: 12px;
    margin-top: 4px;
  }

  .hero-button {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    padding: 14px 32px;
    min-height: 48px;
    font-size: 15px;
    font-weight: 600;
    border-radius: 24px;
    text-decoration: none;
    transition: all 0.3s ease;
    white-space: nowrap;
  }

  .hero-button-primary {
    color: #ffffff;
    background-color: #000000;
  }

  .hero-button-primary:hover {
    background-color: #333333;
    transform: translateY(-2px);
    box-shadow: 0 8px 16px rgba(0, 0, 0, 0.2);
  }

  .hero-button-secondary {
    color: #000000;
    background-color: transparent;
    border: 2px solid #000000;
  }

  .hero-button-secondary:hover {
    background-color: #000000;
    color: #ffffff;
    transform: translateY(-2px);
    box-shadow: 0 8px 16px rgba(0, 0, 0, 0.15);
  }

  .hero-button:active {
    transform: translateY(0);
  }

  /* Tablet */
  @media (min-width: 640px) {
    .hero {
      padding: 64px 24px;
    }

    .hero-content {
      gap: 24px;
    }

    .hero-title {
      font-size: 42px;
    }

    .hero-description {
      font-size: 16px;
    }

    .hero-actions {
      flex-direction: row;
      gap: 16px;
    }

    .hero-button {
      padding: 14px 32px;
      font-size: 16px;
    }
  }

  /* Desktop */
  @media (min-width: 1024px) {
    .hero {
      padding: 80px 24px;
    }

    .hero-title {
      font-size: 48px;
    }

    .hero-description {
      font-size: 17px;
    }
  }
</style>
