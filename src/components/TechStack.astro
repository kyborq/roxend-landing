---
interface Technology {
  name: string;
  items: string[];
}

interface Props {
  title?: string;
  subtitle?: string;
  categories?: Technology[];
}

const {
  title = "Технологии, с которыми мы работаем",
  subtitle = "Современный стек технологий для создания надежных и масштабируемых решений",
  categories = [
    {
      name: "Frontend",
      items: [
        "React",
        "Vue.js",
        "Angular",
        "Next.js",
        "TypeScript",
        "Tailwind CSS",
        "Material UI"
      ]
    },
    {
      name: "Backend",
      items: [
        "Node.js",
        "Python (Django, FastAPI)",
        "Java",
        "C#",
        "PHP",
        "GraphQL",
        "REST API"
      ]
    },
    {
      name: "Mobile",
      items: [
        "React Native",
        "Flutter",
        "Swift",
        "Kotlin",
        "Expo"
      ]
    },
    {
      name: "Базы данных",
      items: [
        "PostgreSQL",
        "MongoDB",
        "MySQL",
        "Redis",
        "Elasticsearch",
        "Firebase"
      ]
    },
    {
      name: "DevOps & Cloud",
      items: [
        "Docker",
        "Kubernetes",
        "AWS",
        "Google Cloud",
        "Azure",
        "GitHub Actions",
        "CI/CD"
      ]
    },
    {
      name: "Тестирование",
      items: [
        "Jest",
        "Cypress",
        "Playwright",
        "React Testing Library",
        "Unit Tests",
        "Integration Tests"
      ]
    },
  ],
} = Astro.props;
---

<section class="tech-stack">
  <div class="tech-stack-container">
    <div class="tech-stack-header">
      <h2 class="tech-stack-title">{title}</h2>
      <p class="tech-stack-subtitle">{subtitle}</p>
    </div>

    <div class="tech-stack-grid">
      {
        categories.map((category) => (
          <div class="tech-category">
            <h3 class="tech-category-name">{category.name}</h3>
            <div class="tech-items">
              {category.items.map((item) => (
                <span class="tech-item">{item}</span>
              ))}
            </div>
          </div>
        ))
      }
    </div>
  </div>
</section>

<style>
  .tech-stack {
    max-width: 896px;
    margin: 0 auto;
    padding: 48px 16px;
  }

  .tech-stack-container {
    display: flex;
    flex-direction: column;
    gap: 48px;
  }

  .tech-stack-header {
    text-align: center;
  }

  .tech-stack-title {
    font-size: 32px;
    font-weight: 700;
    color: #000000;
    margin: 0 0 16px 0;
  }

  .tech-stack-subtitle {
    font-size: 16px;
    color: #666666;
    margin: 0;
    line-height: 1.6;
  }

  .tech-stack-grid {
    display: grid;
    grid-template-columns: 1fr;
    gap: 24px;
  }

  .tech-category {
    background-color: #ffffff;
    border: 1px solid rgba(0, 0, 0, 0.08);
    border-radius: 20px;
    padding: 24px;
    display: flex;
    flex-direction: column;
    gap: 16px;
    transition: all 0.3s ease;
  }

  .tech-category:hover {
    border-color: rgba(0, 0, 0, 0.15);
    box-shadow: 0 4px 16px rgba(0, 0, 0, 0.08);
    transform: translateY(-2px);
  }

  .tech-category-name {
    font-size: 18px;
    font-weight: 700;
    color: #000000;
    margin: 0;
  }

  .tech-items {
    display: flex;
    flex-wrap: wrap;
    gap: 8px;
  }

  .tech-item {
    padding: 8px 14px;
    background-color: rgba(0, 0, 0, 0.04);
    border: 1px solid rgba(0, 0, 0, 0.06);
    border-radius: 10px;
    font-size: 13px;
    font-weight: 500;
    color: #333333;
    transition: all 0.2s ease;
  }

  .tech-item:hover {
    background-color: rgba(0, 0, 0, 0.08);
    border-color: rgba(0, 0, 0, 0.12);
  }

  /* Tablet */
  @media (min-width: 640px) {
    .tech-stack {
      padding: 80px 24px;
    }

    .tech-stack-container {
      gap: 64px;
    }

    .tech-stack-title {
      font-size: 36px;
    }

    .tech-stack-subtitle {
      font-size: 18px;
    }

    .tech-stack-grid {
      grid-template-columns: repeat(2, 1fr);
      gap: 24px;
    }

    .tech-category {
      border-radius: 24px;
      padding: 28px;
    }

    .tech-category:hover {
      transform: translateY(-4px);
    }

    .tech-category-name {
      font-size: 20px;
    }

    .tech-items {
      gap: 10px;
    }

    .tech-item {
      padding: 10px 16px;
      font-size: 14px;
    }
  }

  /* Desktop */
  @media (min-width: 1024px) {
    .tech-stack-grid {
      grid-template-columns: repeat(3, 1fr);
    }

    .tech-category-name {
      font-size: 22px;
    }

    .tech-item {
      font-size: 15px;
    }
  }
</style>

