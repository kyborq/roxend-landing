---
import { getCollection, getEntry } from "astro:content";
import Layout from "../../layouts/Layout.astro";

const { slug } = Astro.params;

if (!slug) {
  return Astro.redirect("/blog");
}

const post = await getEntry("blog", slug);

if (!post) {
  return Astro.redirect("/blog");
}

const { Content } = await post.render();

const formatDate = (date: Date) => {
  return new Intl.DateTimeFormat("ru-RU", {
    day: "numeric",
    month: "long",
    year: "numeric",
  }).format(date);
};
---

<Layout
  title={`${post.data.title} | Roxend`}
  description={post.data.description}
  image={post.data.heroImage}
>
  <article class="article">
    <div class="article-container">
      <header class="article-header">
        <a href="/blog" class="back-link">← Все кейсы</a>

        <div class="article-meta">
          {post.data.industry && (
            <span class="article-industry">{post.data.industry}</span>
          )}
          <time datetime={post.data.pubDate.toISOString()}>
            {formatDate(post.data.pubDate)}
          </time>
        </div>

        <h1 class="article-title">{post.data.title}</h1>
        <p class="article-description">{post.data.description}</p>

        {
          (post.data.client ||
            post.data.duration ||
            post.data.services ||
            post.data.technologies) && (
            <div class="article-info">
              {post.data.client && (
                <div class="info-item">
                  <span class="info-label">Клиент</span>
                  <span class="info-value">{post.data.client}</span>
                </div>
              )}
              {post.data.duration && (
                <div class="info-item">
                  <span class="info-label">Сроки</span>
                  <span class="info-value">{post.data.duration}</span>
                </div>
              )}
              {post.data.services && (
                <div class="info-item">
                  <span class="info-label">Услуги</span>
                  <span class="info-value">{post.data.services.join(", ")}</span>
                </div>
              )}
              {post.data.technologies && (
                <div class="info-item">
                  <span class="info-label">Технологии</span>
                  <div class="tech-tags">
                    {post.data.technologies.map((tech) => (
                      <span class="tech-tag">{tech}</span>
                    ))}
                  </div>
                </div>
              )}
            </div>
          )
        }
      </header>

      {
        post.data.heroImage && (
          <div class="article-hero">
            <img src={post.data.heroImage} alt={post.data.title} />
          </div>
        )
      }

      <div class="article-content">
        <Content />
      </div>

      <footer class="article-footer">
        <a href="/blog" class="back-button">← Смотреть другие кейсы</a>
        <a href="/#contacts" class="contact-button">Обсудить проект</a>
      </footer>
    </div>
  </article>
</Layout>

<style>
  .article {
    max-width: 896px;
    margin: 0 auto;
    padding: 48px 16px;
  }

  .article-container {
    display: flex;
    flex-direction: column;
    gap: 32px;
  }

  .article-header {
    display: flex;
    flex-direction: column;
    gap: 16px;
  }

  .back-link {
    font-size: 14px;
    color: #666666;
    text-decoration: none;
    transition: color 0.3s ease;
    width: fit-content;
  }

  .back-link:hover {
    color: #0a45c3;
  }

  .article-meta {
    display: flex;
    align-items: center;
    gap: 12px;
    font-size: 14px;
    color: #888888;
  }

  .article-industry {
    background-color: #f0f4ff;
    color: #0a45c3;
    padding: 4px 12px;
    border-radius: 6px;
    font-weight: 500;
    font-size: 13px;
  }

  .article-title {
    font-size: 32px;
    font-weight: 700;
    color: #000000;
    margin: 0;
    line-height: 1.2;
  }

  .article-description {
    font-size: 18px;
    color: #666666;
    line-height: 1.6;
    margin: 0;
  }

  .article-info {
    display: grid;
    grid-template-columns: 1fr;
    gap: 16px;
    padding: 24px;
    background-color: #ffffff;
    border: 1px solid rgba(0, 0, 0, 0.08);
    border-radius: 16px;
    margin-top: 8px;
  }

  .info-item {
    display: flex;
    flex-direction: column;
    gap: 4px;
  }

  .info-label {
    font-size: 12px;
    font-weight: 600;
    color: #999999;
    text-transform: uppercase;
    letter-spacing: 0.5px;
  }

  .info-value {
    font-size: 14px;
    font-weight: 500;
    color: #000000;
  }

  .tech-tags {
    display: flex;
    flex-wrap: wrap;
    gap: 8px;
  }

  .tech-tag {
    font-size: 13px;
    color: #666666;
    background-color: #f5f5f5;
    padding: 4px 10px;
    border-radius: 6px;
  }

  .article-hero {
    width: 100%;
    border-radius: 16px;
    overflow: hidden;
    background: linear-gradient(135deg, #f0f4ff 0%, #e8ecf4 100%);
  }

  .article-hero img {
    width: 100%;
    height: auto;
    display: block;
  }

  .article-content {
    line-height: 1.8;
    color: #333333;
  }

  .article-content :global(h2) {
    font-size: 24px;
    font-weight: 700;
    color: #000000;
    margin: 40px 0 16px 0;
  }

  .article-content :global(h3) {
    font-size: 20px;
    font-weight: 600;
    color: #000000;
    margin: 32px 0 12px 0;
  }

  .article-content :global(p) {
    font-size: 16px;
    margin: 0 0 16px 0;
  }

  .article-content :global(ul),
  .article-content :global(ol) {
    margin: 0 0 16px 0;
    padding-left: 24px;
  }

  .article-content :global(li) {
    font-size: 16px;
    margin-bottom: 8px;
  }

  .article-content :global(blockquote) {
    margin: 24px 0;
    padding: 16px 24px;
    background-color: #f8f9fa;
    border-left: 4px solid #0a45c3;
    border-radius: 0 8px 8px 0;
    font-style: italic;
    color: #555555;
  }

  .article-content :global(code) {
    font-family: "SF Mono", "Fira Code", monospace;
    font-size: 14px;
    background-color: #f5f5f5;
    padding: 2px 6px;
    border-radius: 4px;
  }

  .article-content :global(pre) {
    background-color: #1a1a2e;
    color: #ffffff;
    padding: 20px 24px;
    border-radius: 12px;
    overflow-x: auto;
    margin: 24px 0;
  }

  .article-content :global(pre code) {
    background-color: transparent;
    padding: 0;
    color: inherit;
  }

  .article-content :global(img) {
    max-width: 100%;
    height: auto;
    border-radius: 12px;
    margin: 24px 0;
  }

  .article-content :global(a) {
    color: #0a45c3;
    text-decoration: none;
    border-bottom: 1px solid transparent;
    transition: border-color 0.3s ease;
  }

  .article-content :global(a:hover) {
    border-bottom-color: #0a45c3;
  }

  .article-footer {
    display: flex;
    flex-direction: column;
    gap: 16px;
    padding-top: 32px;
    border-top: 1px solid rgba(0, 0, 0, 0.08);
    margin-top: 32px;
  }

  .back-button,
  .contact-button {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    padding: 14px 24px;
    border-radius: 12px;
    font-size: 15px;
    font-weight: 600;
    text-decoration: none;
    transition: all 0.3s ease;
    text-align: center;
  }

  .back-button {
    background-color: #f5f5f5;
    color: #333333;
  }

  .back-button:hover {
    background-color: #eeeeee;
  }

  .contact-button {
    background-color: #0a45c3;
    color: #ffffff;
  }

  .contact-button:hover {
    background-color: #083898;
  }

  /* Tablet */
  @media (min-width: 640px) {
    .article {
      padding: 80px 24px;
    }

    .article-container {
      gap: 40px;
    }

    .article-title {
      font-size: 40px;
    }

    .article-description {
      font-size: 20px;
    }

    .article-info {
      grid-template-columns: repeat(2, 1fr);
      gap: 20px;
      padding: 28px;
    }

    .article-hero {
      border-radius: 24px;
    }

    .article-content :global(h2) {
      font-size: 28px;
    }

    .article-content :global(h3) {
      font-size: 22px;
    }

    .article-content :global(p),
    .article-content :global(li) {
      font-size: 17px;
    }

    .article-footer {
      flex-direction: row;
      justify-content: space-between;
    }

    .back-button,
    .contact-button {
      width: auto;
    }
  }

  /* Desktop */
  @media (min-width: 1024px) {
    .article-title {
      font-size: 48px;
    }

    .article-info {
      grid-template-columns: repeat(4, 1fr);
    }
  }
</style>
